<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- ðŸ”¥ Profile-based LOG PATH (no default here!) -->
    <springProfile name="local">
        <property name="LOG_PATH" value="logs" />
    </springProfile>

    <springProfile name="docker">
        <property name="LOG_PATH" value="/app/logs" />
    </springProfile>

    <!-- Main log file (uses LOG_PATH from active profile) -->
    <property name="LOG_FILE" value="${LOG_PATH}/app.log" />

    <!-- Console logs -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Rolling logs (1 minute) -->
    <appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Rolling every 1 minute -->
            <fileNamePattern>${LOG_PATH}/app-%d{yyyy-MM-dd_HH-mm}.log</fileNamePattern>

            <maxHistory>60</maxHistory>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ROLLING"/>
    </root>

</configuration>
